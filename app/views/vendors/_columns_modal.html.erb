<div id="toggle-datatable-columns" class="modal fade">
  <div class="modal-dialog" style="width:300px;">
    <div class="modal-content">
      <div class="modal-header">
        <div class="caption"><strong>Show/Hide Columns</strong></div>
        <div class="cancel">
          <a class="cancel_link" href="#" data-dismiss="modal">X</a>
        </div>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <div class="column-checkbox">
            <label><input class="vendors-column" type="checkbox" data-val="0"> Logo</label>
          </div>
          <div class="column-checkbox">
            <label><input class="vendors-column" type="checkbox" data-val="1" checked> ID</label>
          </div>
          <div class="column-checkbox">
            <label><input class="vendors-column" type="checkbox" data-val="2" checked> Vendor</label>
          </div>
          <div class="column-checkbox">
            <label><input class="vendors-column" type="checkbox" data-val="3" checked> Known Macs</label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-right">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
