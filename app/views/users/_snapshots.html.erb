<div class="tab-pane row profile-account" id="tab_1_3">
  <div class="row mix-grid">
    <% @user.cameras.order(:is_online).reverse.each do |camera| %>
        <div class="col-md-3 col-sm-4 mix category_1 mix_all camera-snapshot" style="display: block; opacity: 1;">
          <div class="mix-inner">
            <% if camera.preview %>
                <img class="img-responsive" src="data:image/jpeg;base64,<%= Base64.encode64(camera.preview) %>" />
            <% else %>
                <img class="img-responsive" src="<%= image_path 'noise.png' %>" />
            <% end %>
            <div class="mix-details">
              <h4><%= camera.name %></h4>
              <a class="mix-link" href="<%= camera_path(camera) %>" title="<%= camera.name %>" data-rel="fancybox-button">
                <i class="fa fa-link"></i>
              </a>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>