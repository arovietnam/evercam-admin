<div id="add-action" class="modal fade">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center" style="width:95%;">
      <div class="modal-content">
        <div class="modal-header">
        	<div class="caption"><h2>Duplicate Cameras</h2></div>
        </div>
        <div class="modal-body">
          <div id="loading-popup"><img src="<%= image_path 'loader3' %>"></div>
          <div id="dat"></div>         
        </div>
        <fieldset>
          <div class="modal-footer">
            <button type="button" id="close-dialog" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<div class="bb-alert alert alert-danger" style="display: none;">
  <span>Invalid camera id.</span>
</div>
<div id="deleteModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="col-md-12">
          <p class="text-left">Are you sure you want to <strong>Delete</strong> this camera?</p>
        </div>
        <div class="col-md-12">
          <p>Enter camera id ( <strong id="id"></strong> ) to confirm that you want to permanently delete this camera</p>
          <input id="camera_specified_id" name="camera_specified_id" type="text" class="form-control">
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-sm-8 margin-top-10">
          <button id="delete-camera" name="delete-camera" class="btn btn-danger pull-left">Delete</button>
          <button id="delete-camera" name="delete-camera" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
