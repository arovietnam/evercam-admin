<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
          <li>
            <i class="fa fa-home"></i>
            <a href="/">Home</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a href="#">Cameras</a>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover table-datatable" id="datatable_ajax">
          <thead>
            <tr role="row" class="heading">
              <th name="order_id" class="sorting">ID</th>
              <th name="order_owner" class="sorting">Owner</th>
              <th name="order_name" class="sorting">Name</th>
              <th name="order_model" class="sorting">Model</th>
              <th name="order_vendor" class="sorting">Vendor</th>
              <th name="order_public" class="sorting">Public</th>
              <th name="order_online" class="sorting">Online</th>
              <th name="order_created" class="sorting datatable-date">Created At</th>
              <th name="order_polled" class="sorting datatable-date">Last Polled</th>
            </tr>
          </thead>
          <tbody>
            <% @cameras.each do |camera| %>
            <tr>
              <td><%= link_to camera.exid, camera_path(camera) %></td>
              <td><%= link_to camera.owner.fullname, user_path(camera.owner) %></td>
              <td><%= camera.name %></td>
              <td><%= camera.vendor_model.name if camera.model_id %></td>
              <td><%= camera.vendor_model.vendor.name if camera.model_id %></td>
              <td><%= human_boolean(camera.is_online) %></td>
              <td><%= human_boolean(camera.is_public) %></td>
              <td><%= camera.created_at.strftime("%d/%m/%y") %></td>
              <td><%= camera.last_polled_at.strftime("%d/%m/%y") if camera.last_polled_at %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

