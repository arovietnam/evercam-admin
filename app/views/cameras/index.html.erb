<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
          <%= render 'shared/breadcrumb_basic', current_section: 'Cameras' %>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="dropdown-checklist" id="div-dropdown-checklist">
      Toggle column:
      <select id="ddl-camera-columns" class="s1" multiple="multiple">
        <option value="0" selected="selected">ID</option>
        <option value="1" selected="selected">Owner</option>
        <option value="2" selected="selected">Name</option>
        <option value="3" selected="selected">Camera IP</option>

        <option value="4" selected="selected">Http Port</option>
        <option value="5" selected="selected">Rtsp Port</option>
        <option value="6" selected="selected">Username</option>
        <option value="7" selected="selected">Password</option>

        <option value="8" selected="selected">Mac Address</option>
        <option value="9" selected="selected">Model</option>
        <option value="10" selected="selected">Vendor</option>
        <option value="11" selected="selected">Public</option>
        <option value="12" selected="selected">Online</option>
        <option value="13" selected="selected">Created At</option>
        <option value="14">Last Polled</option>
      </select>
    </div>
    <div id="cameras-list-row" class="row hide">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="cameras_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_id" class="sorting">ID</th>
              <th name="order_owner" class="sorting">Owner</th>
              <th name="order_name" class="sorting">Name</th>
              <th name="order_camera_ip" class="sorting">Camera IP</th>
              <th name="order_http_port" class="sorting">Http Port</th>
              <th name="order_rtsp_port" class="sorting">Rtsp Port</th>
              <th name="order_username" class="sorting">Username</th>
              <th name="order_password" class="sorting">Password</th>
              <th name="order_mac" class="sorting">Mac Address</th>
              <th name="order_model" class="sorting">Model</th>
              <th name="order_vendor" class="sorting">Vendor</th>
              <th name="order_public" class="sorting">Public</th>
              <th name="order_online" class="sorting">Online</th>
              <th name="order_created" class="sorting datatable-date">Created At</th>
              <th name="order_polled" class="sorting datatable-date">Last Polled</th>
            </tr>
          </thead>
          <tbody>
            <%= render @cameras %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeCameras();
  });
</script>
