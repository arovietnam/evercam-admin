<div class="page-content-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb">
          <%= render 'shared/breadcrumb_basic', current_section: 'Share Requests' %>
        </ul>
      </div>
    </div>

    <div href="#" class="" data-toggle="modal" data-target="#share-request-columns">
      <i class="fa fa-columns"></i>
    </div>
    <%= render 'columns_modal' %>
    <div class="dropdown-checklist" id="div-dropdown-checklist">

      <select id="ddl-shares-columns" class="s1" multiple="multiple">
        <option value="0" selected="selected">Email</option>
        <option value="1" selected="selected">Camera</option>
        <option value="2" selected="selected">Sharer Email</option>
        <option value="3" selected="selected">Message</option>
        <option value="4" selected="selected">Rights</option>
        <option value="5" selected="selected">Status</option>
        <option value="6" selected="selected">Created At</option>
      </select>
    </div>
    <div id="shares-list-row" class="row hide">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover user-list-table" id="shares_datatables">
          <thead>
          <tr role="row" class="heading">
            <th name="order_username" class="sorting">Email</th>
            <th name="order_name" class="sorting">Camera</th>
            <th name="order_email" class="sorting">Sharer Email</th>
            <th name="order_camera_count" class="sorting">Message</th>
            <th name="order_api_id" class="sorting">Rights</th>
            <th name="order_api_key" class="sorting">Status</th>
            <th name="order_registered" class="sorting datatable-date">Created At</th>
          </tr>
          </thead>
          <tbody>
          <%= render @share_requests %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    window.initializeShareRequests();
  });
</script>
