<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
          <%= render 'shared/breadcrumb_basic', current_section: 'Models' %>
          <li>
            <div href="#" class="btn btn-edit" data-toggle="modal" data-target="#add-vendor-modal">
              Add Model
            </div>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <%= render 'vendor_model_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <%= render 'columns_modal' %>
    <div class="dropdown-checklist-models" id="div-dropdown-checklist">
      <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
        <i class="fa fa-columns"></i>
      </div>
    </div>
    <div id="vendor-model-list-row" class="row">
      <input type="hidden" id="total_vendors" value="<%= @total_vendors %>"/>
      <input type="hidden" id="total_cameras" value="<%= @total_cameras %>"/>
      <div class="col-md-12 table-container">
        <div class="table-actions-wrapper">
          <span></span>
          Filter: <input type="text" placeholder="Vendor/Model" class="table-group-action-input form-control input-inline input-small input-sm"/>
        </div>
        <table class="table table-striped table-bordered table-hover" id="datatable_vendor_models">
          <thead>
          <tr role="row" class="heading">
            <th width="10%" name="order_model_logo" class="sorting">Logo</th>
            <th width="10%" name="order_model_id" class="sorting">Model ID</th>
            <th width="15%" name="order_vendor" class="sorting">Vendor</th>
            <th width="15%" name="order_model" class="sorting">Model</th>
            <th width="20%" name="order_snapshot_url" class="sorting">Snapshot</th>
            <th width="20%" name="order_h264_url" class="sorting">H264</th>
            <th width="20%" name="order_mjpg_url" class="sorting">MJPG</th>
            <th width="20%" name="order_mpeg_url" class="sorting">MPEG4</th>
            <th width="20%" name="order_mobile_url" class="sorting">Mobile</th>
            <th width="20%" name="order_lowres_url" class="sorting">Low Res</th>
            <th width="20%" name="order_username" class="sorting">Username</th>
            <th width="20%" name="order_password" class="sorting">Password</th>

            <th name="order_audio_url" class="sorting">Audio</th>
            <th name="order_poe" class="sorting">POE</th>
            <th name="order_wifi" class="sorting">Wifi</th>
            <th name="order_onvif" class="sorting">Onvif</th>
            <th name="order_psia" class="sorting">PSIA</th>
            <th name="order_ptz" class="sorting">PTZ</th>
            <th name="order_infrared" class="sorting">Infrared</th>
            <th name="order_varifocal" class="sorting">Varifocal</th>
            <th name="order_sd_card" class="sorting">SD card</th>
            <th name="order_upnp" class="sorting">UPNP</th>
            <th name="order_audio_io" class="sorting">Audio IO</th>
            <th name="order_shape" class="sorting">Shape</th>
            <th name="order_resolution" class="sorting">Resolution</th>
          </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeVendorModel();
  });
</script>