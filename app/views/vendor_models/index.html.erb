<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
          <%= render 'shared/breadcrumb_basic', current_section: 'Models' %>
          <li>
            <div href="#" class="btn btn-edit" data-toggle="modal" data-target="#add-vendor-modal">
              Add Model
            </div>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <%= render 'vendor_model_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <div id="vendor-model-list-row" class="row">
      <input type="hidden" id="total_vendors" value="<%= @total_vendors %>"/>
      <input type="hidden" id="total_cameras" value="<%= @total_cameras %>"/>
      <ul id="columns-vis" class="nav navbar-nav" style="display:none">
        <li class="dropdown">
          <a id="columns-toggle" class="dropdown-toggle" data-toggle="dropdown" title="Select columns" href="#">Columns <span class="caret"></span></a>
          <ul id="columns-list" class="dropdown-menu">
            <li><input type="checkbox" class="columns-visible" data-column="0" checked="true" /> Model ID</li>
            <li><input type="checkbox" class="columns-visible" data-column="2" checked="true" /> Vendor</li>
            <li><input type="checkbox" class="columns-visible" data-column="3" checked="true" /> Model</li>
            <li><input type="checkbox" class="columns-visible" data-column="4" checked="true" /> Snapshot</li>
            <li><input type="checkbox" class="columns-visible" data-column="5" checked="true" /> H264</li>
            <li><input type="checkbox" class="columns-visible" data-column="6" checked="true" /> MJPG</li>
            <li><input type="checkbox" class="columns-visible" data-column="7" checked="true" /> MPEG4</li>
            <li><input type="checkbox" class="columns-visible" data-column="8" checked="true" /> Mobile</li>
            <li><input type="checkbox" class="columns-visible" data-column="9" checked="true" /> Low Res</li>
          </ul>
        </li>
      </ul>
      <div class="col-md-12 table-container">
        <div class="table-actions-wrapper">
          <span></span>
          Search: <input type="text" placeholder="Vendor/Model" class="table-group-action-input form-control input-inline input-small input-sm"/>
        </div>
        <table class="table table-striped table-bordered table-hover" id="datatable_vendor_models">
          <thead>
          <tr role="row" class="heading">
            <th width="10%" name="order_model_logo" class="sorting">Logo</th>
            <th width="10%" name="order_model_id" class="sorting">Model ID</th>
            <th width="15%" name="order_vendor" class="sorting">Vendor</th>
            <th width="15%" name="order_model" class="sorting">Model</th>
            <th width="20%" name="order_snapshot_url" class="sorting">Snapshot</th>
            <th width="20%" name="order_h264_url" class="sorting">H264</th>
            <th width="20%" name="order_mjpg_url" class="sorting">MJPG</th>
            <th width="20%" name="order_mpeg_url" class="sorting">MPEG4</th>
            <th width="20%" name="order_mobile_url" class="sorting">Mobile</th>
            <th width="20%" name="order_lowres_url" class="sorting">Low Res</th>
            <th width="20%" name="order_lowres_url" class="sorting">Username</th>
            <th width="20%" name="order_lowres_url" class="sorting">Password</th>
          </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeVendorModel();
  });
</script>